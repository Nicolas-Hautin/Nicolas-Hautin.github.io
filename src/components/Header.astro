import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header id="header" class="transition-all duration-300 bg-white z-50">
  <nav class="hidden lg:flex justify-between items-center py-2 px-32 max-h-36 font-medium">
      <a class="flex items-center gap-2" href="/">
          <img src="/icon.png" alt="favicon" class="w-8">
          <span class="text-bold w-48 font-sans no-underline">Nicolas HAUTIN</span>
      </a>
      <div class="container flex gap-5 justify-center items-center p-2">
          <HeaderLink href="/">Accueil</HeaderLink>
          <HeaderLink href="/#propos">À Propos</HeaderLink>
          <HeaderLink href="/blog">Portfolio</HeaderLink>
          <HeaderLink href="/contact">Contact</HeaderLink>
      </div>
      <a class="bg-black border-2 border-black text-white px-5 py-3 hover:bg-white hover:text-black hover:border-2 whitespace-nowrap" href="/blog">Mes réalisations</a>
  </nav>
  <nav class="flex justify-between items-center p-5 bg-white">
    <a class="flex items-center gap-2" href="/">
      <img src="/icon.png" alt="favicon" class="w-8">
      <span class="text-bold w-48 font-sans no-underline">Nicolas HAUTIN</span>
  </a>
    <div class="relative">
    <button id="menu-button" class="flex flex-col gap-1.5 items-center justify-center w-10 h-10 bg-white focus:outline-none">
      <span class="w-6 h-1 bg-black transition-all duration-300"></span>
      <span class="w-6 h-1 bg-black transition-all duration-300"></span>
      <span class="w-6 h-1 bg-black transition-all duration-300"></span>
    </button>
<!-- Dropdown Menu -->
<div id="menu" class="absolute top-12 right-0 bg-white shadow-lg rounded-lg py-5 px-24 opacity-0 invisible transition-all duration-300 transform scale-100">
  <ul class="w-28 flex flex-col gap-5">
    <li class="w-12">
      <HeaderLink href="/" class="w-44">Accueil</HeaderLink>          
    </li>
    <li class="w-12">
      <HeaderLink href="/blog">Portfolio</HeaderLink>
    </li>    
    <li class="w-12">
      <HeaderLink href="/contact">Contact</HeaderLink>
    </li>
  </ul>
</div>
  </div>



</nav>
</header>


<script>
    window.addEventListener('scroll', function() {
        const header = document.getElementById('header');
        if (window.scrollY > 0) {
            header.classList.add('fixed', 'top-0', 'left-0', 'w-full', 'bg-white', 'shadow-md');
        } else {
            header.classList.remove('fixed', 'top-0', 'left-0', 'w-full', 'bg-white', 'shadow-md');
        }
    });
</script>
  <!-- JavaScript -->
  <script>
    const menuButton = document.getElementById('menu-button');
    const menu = document.getElementById('menu');

    menuButton.addEventListener('click', () => {
      menu.classList.toggle('opacity-0');
      menu.classList.toggle('invisible');
      menu.classList.toggle('scale-75');
    });
  </script>
<style>
    .container a {
        color: #000000;
        text-decoration: none;
        padding: 10px;
        position: relative;
        cursor: pointer;
    }

    .container a:before,
    .container a:after {
        content: "";
        position: absolute;
        left: 0;
        width: 100%;
        height: 2px;
        background: #000000;
        opacity: 0;
        transition: all 0.3s;
    }

    .container a:before {
        top: 0;
        transform: translateY(10px);
    }

    .container a:after {
        bottom: 0;
        transform: translateY(-10px);
    }

    .container a:hover:before,
    .container a:hover:after {
        opacity: 1;
        transform: translateY(0);
    }
</style>