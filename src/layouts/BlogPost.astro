---
import BaseLayout from "../layouts/BaseLayout.astro";
import FormattedDate from '../components/FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout>
  <div class="flex flex-col items-center justify-center p-10 lg:px-32 lg:py-20">
    <div class="w-full flex items-center justify-center mb-16">
      {heroImage && <img src={heroImage} alt={title} class="object-cover w-full h-44  lg:h-96 bg-cover" />}
    </div>
    <div class="prose max-w-4xl mx-auto">
      <h1 class="text-4xl lg:text-4xl font-semibold font-copperplate text-center mb-4">{title}</h1>
      <p class="text-md lg:text-lg font-montserrat text-gray-600 text-center p-5 border-b border-gray-300 mb-5">{description}</p>
      
      <article class="prose mx-auto">
        <slot />
      </article>
    </div>
  </div>
</BaseLayout>